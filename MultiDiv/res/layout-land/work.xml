<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="2dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" >

        <Button
            android:id="@+id/wHme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/button_menu"
            android:padding="@dimen/cfg_padding"
            android:text="@string/cfg_home"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/wp1"
            android:layout_width="@dimen/cfg_padding_small"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wHme" />

        <Button
            android:id="@+id/wCfg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/wp1"
            android:background="@drawable/button_menu"
            android:padding="@dimen/cfg_padding"
            android:text="@string/cfg_config"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/wp2"
            android:layout_width="@dimen/cfg_padding_small"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wCfg" />

        <Button
            android:id="@+id/wRpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/wp2"
            android:background="@drawable/button_menu"
            android:padding="@dimen/cfg_padding"
            android:text="@string/cfg_report"
            android:textColor="#fff" />

        <multiDiv.Math.Comp.ToggleMa
            android:id="@+id/bOnOff"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rec_lines"
            android:textColor="#0f0"
            android:textOff="@string/work_start"
            android:textOn="@string/work_stop" />

        <TextView
            android:id="@+id/wp3"
            android:layout_width="@dimen/cfg_padding_small"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/bOnOff" />

        <multiDiv.Math.Comp.TextViewMa
            android:id="@+id/tCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/wp3"
            android:gravity="right"
            android:text=""
            android:textSize="@dimen/cfg_font_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TableLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dip"
            android:stretchColumns="1" >

            <TableRow>

                <multiDiv.Math.Comp.TextViewMa
                    android:id="@+id/tcCorrect"
                    android:gravity="left"
                    android:text=""
                    android:textColor="#0F0"
                    android:textSize="@dimen/cfg_font_size" />

                <multiDiv.Math.Comp.TextViewMa
                    android:id="@+id/tcCurrent"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/cfg_font_size" />

                <multiDiv.Math.Comp.TextViewMa
                    android:id="@+id/tcWrong"
                    android:gravity="right"
                    android:text=""
                    android:textColor="#F00"
                    android:textSize="@dimen/cfg_font_size" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView android:text="" />

                <multiDiv.Math.Comp.TextViewMa
                    android:id="@+id/tOp1"
                    android:text="" />

                <TextView android:text="" />
            </TableRow>

            <TableRow>

                <TextView android:text="" />

                <multiDiv.Math.Comp.TextViewMa
                    android:id="@+id/tOpType"
                    android:text="" />

                <TextView android:text="" />
            </TableRow>

            <TableRow>

                <TextView android:text="" />

                <multiDiv.Math.Comp.TextViewMa
                    android:id="@+id/tOp2"
                    android:text="" />

                <TextView android:text="" />
            </TableRow>

            <TableRow>

                <TextView android:text="" />

                <TextView
                    android:id="@+id/tDvd"
                    android:text="" />

                <TextView android:text="" />
            </TableRow>

            <TableRow>

                <TextView android:text="" />

                <multiDiv.Math.Comp.TextViewMa
                    android:id="@+id/tAns"
                    android:text="" />

                <TextView android:text="" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TableRow>

                <multiDiv.Math.Comp.ButtonMa
                    android:id="@+id/b0"
                    android:layout_weight="1"
                    android:text="@string/num_0" />

                <multiDiv.Math.Comp.ButtonMa
                    android:id="@+id/b1"
                    android:layout_weight="1"
                    android:text="@string/num_1" />

                <multiDiv.Math.Comp.ButtonMa
                    android:id="@+id/b2"
                    android:layout_weight="1"
                    android:text="@string/num_2" />
            </TableRow>

            <TableRow>

                <multiDiv.Math.Comp.ButtonMa
                    android:id="@+id/b3"
                    android:layout_weight="1"
                    android:text="@string/num_3" />

                <multiDiv.Math.Comp.ButtonMa
                    android:id="@+id/b4"
                    android:layout_weight="1"
                    android:text="@string/num_4" />

                <multiDiv.Math.Comp.ButtonMa
                    android:id="@+id/b5"
                    android:layout_weight="1"
                    android:text="@string/num_5" />
            </TableRow>

            <TableRow>

                <multiDiv.Math.Comp.ButtonMa
                    android:id="@+id/b6"
                    android:layout_weight="1"
                    android:text="@string/num_6" />

                <multiDiv.Math.Comp.ButtonMa
                    android:id="@+id/b7"
                    android:layout_weight="1"
                    android:text="@string/num_7" />

                <multiDiv.Math.Comp.ButtonMa
                    android:id="@+id/b8"
                    android:layout_weight="1"
                    android:text="@string/num_8" />
            </TableRow>

            <TableRow>

                <multiDiv.Math.Comp.ButtonMa
                    android:id="@+id/bC"
                    android:layout_weight="1"
                    android:text="@string/work_clear" />

                <multiDiv.Math.Comp.ButtonMa
                    android:id="@+id/b9"
                    android:layout_weight="1"
                    android:text="@string/num_9" />

                <multiDiv.Math.Comp.ButtonMa
                    android:id="@+id/bOK"
                    android:layout_weight="1"
                    android:text="@string/work_ok"
                    android:textColor="#0f0" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>