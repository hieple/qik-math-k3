<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/rdDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/cfg_padding" />

    <TextView
        android:id="@+id/rdTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rdDate"
        android:paddingRight="@dimen/cfg_padding" />

    <TextView
        android:id="@+id/rdETimeLb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rdDate"
        android:layout_toRightOf="@+id/rdTime"
        android:paddingRight="@dimen/cfg_padding"
        android:text="@string/rpt_etm"
        android:textSize="@dimen/cfg_font_size_rpt" />

    <TextView
        android:id="@+id/rdETime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rdDate"
        android:layout_toRightOf="@+id/rdETimeLb"
        android:paddingRight="@dimen/cfg_padding"
        android:textSize="@dimen/cfg_font_size_rpt" />

    <TextView
        android:id="@+id/rdModeLb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rdDate"
        android:layout_toRightOf="@+id/rdETime"
        android:paddingRight="@dimen/cfg_padding"
        android:text="@string/rpt_md"
        android:textSize="@dimen/cfg_font_size_rpt" />

    <TextView
        android:id="@+id/rdMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rdModeLb"
        android:layout_toRightOf="@+id/rdModeLb"
        android:paddingRight="@dimen/cfg_padding"
        android:textSize="@dimen/cfg_font_size_rpt" />

    <TextView
        android:id="@+id/rdCorrectLb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rdModeLb"
        android:layout_toRightOf="@+id/rdMode"
        android:paddingRight="@dimen/cfg_padding"
        android:text="@string/rpt_ct"
        android:textSize="@dimen/cfg_font_size_rpt" />

    <TextView
        android:id="@+id/rdCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rdModeLb"
        android:layout_toRightOf="@+id/rdCorrectLb"
        android:paddingRight="@dimen/cfg_padding"
        android:textSize="@dimen/cfg_font_size_rpt" />

    <TextView
        android:id="@+id/rdWrongLb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rdModeLb"
        android:layout_toRightOf="@+id/rdCorrect"
        android:paddingRight="@dimen/cfg_padding"
        android:text="@string/rpt_wg"
        android:textSize="@dimen/cfg_font_size_rpt" />

    <TextView
        android:id="@+id/rdWrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rdModeLb"
        android:layout_toRightOf="@+id/rdWrongLb"
        android:paddingRight="@dimen/cfg_padding"
        android:textSize="@dimen/cfg_font_size_rpt" />

    <TextView
        android:id="@+id/rdAverageLb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rdModeLb"
        android:layout_toRightOf="@+id/rdWrong"
        android:paddingRight="@dimen/cfg_padding"
        android:text="@string/rpt_avg"
        android:textSize="@dimen/cfg_font_size_rpt" />

    <TextView
        android:id="@+id/rdAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rdModeLb"
        android:layout_toRightOf="@+id/rdAverageLb"
        android:textSize="@dimen/cfg_font_size_rpt" />

</RelativeLayout>