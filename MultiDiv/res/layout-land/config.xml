<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:padding="2dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <multiDiv.Math.Comp.ToggleMa
                android:id="@+id/tAdd"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:background="@drawable/rec_lines"
                android:textColor="#808080"
                android:textOff="@string/num_plus"
                android:textOn="@string/num_plus"
                android:textSize="@dimen/cfg_font_size" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <multiDiv.Math.Comp.ToggleMa
                android:id="@+id/tSub"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:background="@drawable/rec_lines"
                android:textColor="#808080"
                android:textOff="@string/num_minus"
                android:textOn="@string/num_minus"
                android:textSize="@dimen/cfg_font_size" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="1" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <multiDiv.Math.Comp.ToggleMa
                android:id="@+id/tMul"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:background="@drawable/rec_lines"
                android:textColor="#808080"
                android:textOff="@string/num_multi"
                android:textOn="@string/num_multi"
                android:textSize="@dimen/cfg_font_size" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <multiDiv.Math.Comp.ToggleMa
                android:id="@+id/tDiv"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:background="@drawable/rec_lines"
                android:textColor="#808080"
                android:textOff="@string/num_div"
                android:textOn="@string/num_div"
                android:textSize="@dimen/cfg_font_size" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:padding="2dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="2dp" >

            <multiDiv.Math.Comp.TextViewMa
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cfg_num_fact"
                android:textSize="@dimen/cfg_font_size" />

            <TextView
                android:layout_width="@dimen/cfg_padding"
                android:layout_height="wrap_content" />

            <multiDiv.Math.Comp.TextViewMa
                android:id="@+id/tTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/cfg_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="1" >

            <SeekBar
                android:id="@+id/tNumTest"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:max="90" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="2dp" >

            <multiDiv.Math.Comp.TextViewMa
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cfg_test_time"
                android:textSize="@dimen/cfg_font_size" />

            <TextView
                android:layout_width="@dimen/cfg_padding"
                android:layout_height="wrap_content" />

            <multiDiv.Math.Comp.TextViewMa
                android:id="@+id/tTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/cfg_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="1" >

            <SeekBar
                android:id="@+id/tTimeTest"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:max="270" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="2dp" >

            <multiDiv.Math.Comp.TextViewMa
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cfg_max_num"
                android:textSize="@dimen/cfg_font_size" />

            <TextView
                android:layout_width="@dimen/cfg_padding"
                android:layout_height="wrap_content" />

            <multiDiv.Math.Comp.TextViewMa
                android:id="@+id/tNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/cfg_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="1" >

            <SeekBar
                android:id="@+id/tNumberTest"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:max="10" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>